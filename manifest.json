{
  "manifest_version": 3,
  "name": "25Live & Mason360 Auto-Filler for AI Club",
  "version": "2.0.0",
  "description": "Automatically fills 25Live and Mason360 event forms for AI Club events at GMU",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://25live.collegenet.com/*",
    "https://mason360.gmu.edu/*",
    "https://docs.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Select AI Club Event"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://25live.collegenet.com/pro/gmu*",
        "https://mason360.gmu.edu/event_form2*"
      ],
      "js": ["config.js", "mason360.js", "25live.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
